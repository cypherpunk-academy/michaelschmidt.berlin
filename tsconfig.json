{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["dom", "esnext"],
    "alwaysStrict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "incremental": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "strictNullChecks": true,
    "inlineSourceMap": true
  },
  "include": ["scripts/**/*.ts"],
  "exclude": ["node_modules"]
}
